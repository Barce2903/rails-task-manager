<h1>Task detail</h1>
<p>Title: <%= @task.title %></p>
<p>Details: <%= @task.details %></p>
<p>Completion status: <%= @task.completed %></p>
<%= link_to 'Go back', tasks_path %> <%= link_to 'Edit', task_edit_path(@task) %> <%= link_to 'Delete', task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
